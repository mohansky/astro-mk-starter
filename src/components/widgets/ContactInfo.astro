---
// src/components/sections/ContactInfo.astro
import { getEntry } from "astro:content";
import Heading from "../ui/Heading.astro";
import Card from "../ui/Card/Card.astro";
import CardBody from "../ui/Card/CardBody.astro";
import IconComponent from "../Icons/IconComponent.astro";

const site = await getEntry("config", "site");
if (!site) {
  throw new Error("Site configuration not found");
}
const { contact } = site.data;
---

<div class="space-y-8">
  <div>
    <Heading as="h3" size="lg" class="text-base-content mb-6">
      Contact Information
    </Heading>
    <div class="space-y-6">
      <!-- Email -->
      <div class="flex items-start gap-4">
        <div
          class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center flex-shrink-0"
        >
          <IconComponent
            icon="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            class="w-6 h-6 text-primary"
          />

          <!-- <svg
            class="w-6 h-6 text-primary"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg> -->
        </div>
        <div>
          <h4 class="font-semibold text-base-content mb-1">Email</h4>
          {
            contact.email.map((email: string) => (
              <p class="text-base-content/70">{email}</p>
            ))
          }
        </div>
      </div>

      <!-- Phone -->
      <div class="flex items-start gap-4">
        <div
          class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center flex-shrink-0"
        >
          <IconComponent
            icon="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            class="w-6 h-6 text-secondary"
          />
        </div>
        <div>
          <h4 class="font-semibold text-base-content mb-1">Phone</h4>
          {
            contact.phone.map((phone: string) => (
              <p class="text-base-content/70">{phone}</p>
            ))
          }
        </div>
      </div>

      <!-- Address -->
      <div class="flex items-start gap-4">
        <div
          class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center flex-shrink-0"
        >
          <IconComponent
            icon="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            class="w-6 h-6 text-accent"
          />
        </div>
        <div>
          <h4 class="font-semibold text-base-content mb-1">Office</h4>
          {
            contact.address.map((line: string) => (
              <p class="text-base-content/70">{line}</p>
            ))
          }
        </div>
      </div>
    </div>
  </div>

  <!-- Business Hours -->
  <Card variant="bordered" class="bg-base-200">
    <CardBody class="p-6">
      <Heading as="h4" size="md" class="text-base-content mb-4">
        Business Hours
      </Heading>
      <div class="space-y-2 text-sm">
        {
          contact.businessHours.map((hours: any) => (
            <div class="flex justify-between">
              <span class="text-base-content/70">{hours.days}</span>
              <span class="text-base-content font-medium">{hours.time}</span>
            </div>
          ))
        }
      </div>
    </CardBody>
  </Card>
</div>
