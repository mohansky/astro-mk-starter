---
import Container from "../ui/Container.astro";
import Heading from "../ui/Heading.astro";
import Card from "../ui/Card/Card.astro";
import CardBody from "../ui/Card/CardBody.astro";
import CardTitle from "../ui/Card/CardTitle.astro";
import Background from "../ui/Background.astro";
---

<section class="bg-base-200" id="vision-mission">
  <Background variant="small">
    <Container>
      <div class="text-center mb-12">
        <Heading as="h2" size="xl" class="text-primary mb-4">
          Our Vision & Mission
        </Heading>
        <p class="text-lg text-base-content/70 max-w-2xl mx-auto">
          Driving innovation and excellence in everything we do
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Vision Card -->
        <Card variant="bordered" shadow="lg" hover class="bg-base-100">
          <CardBody class="text-center p-8">
            <div
              class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-primary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                ></path>
              </svg>
            </div>
            <CardTitle class="text-xl mb-4">Our Vision</CardTitle>
            <p class="text-base-content/70">
              To be the leading provider of innovative solutions that empower
              businesses to thrive in the digital age and create lasting value
              for all stakeholders.
            </p>
          </CardBody>
        </Card>

        <!-- Mission Card -->
        <Card variant="bordered" shadow="lg" hover class="bg-base-100">
          <CardBody class="text-center p-8">
            <div
              class="w-16 h-16 bg-secondary/10 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-secondary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <CardTitle class="text-xl mb-4">Our Mission</CardTitle>
            <p class="text-base-content/70">
              To deliver exceptional technology solutions through innovation,
              collaboration, and unwavering commitment to quality and customer
              satisfaction.
            </p>
          </CardBody>
        </Card>

        <!-- Values Card -->
        <Card
          variant="bordered"
          shadow="lg"
          hover
          class="bg-base-100 md:col-span-2 lg:col-span-1"
        >
          <CardBody class="text-center p-8">
            <div
              class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-6"
            >
              <svg
                class="w-8 h-8 text-accent"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path>
              </svg>
            </div>
            <CardTitle class="text-xl mb-4">Our Values</CardTitle>
            <p class="text-base-content/70">
              Integrity, innovation, and excellence guide every decision we
              make. We believe in building lasting relationships through trust
              and transparency.
            </p>
          </CardBody>
        </Card>
      </div>
    </Container>
  </Background>
</section>
