---
// src/components/ui/Heading.astro
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

type VariantType =
  | "default"
  | "secondary"
  | "underline"
  | "textWBg";
type SizeType =
  | "xxxxl"  
  | "xxxl"
  | "xxl"
  | "xl"
  | "lg"
  | "md"
  | "sm"
  | "xs"
  | "xxs" 
type FontWeightType =
  | "black"
  | "bold"
  | "semibold"
  | "normal"
  | "medium"
  | "light"
  | "extralight"
  | "thin";
type FontStyleType = "manrope" | "workSans";
type HeadingTag = "h1" | "h2" | "h3" | "h4" | "h5" | "h6";

interface Props
  extends HTMLAttributes<"h1" | "h2" | "h3" | "h4" | "h5" | "h6"> {
  variant?: VariantType;
  size?: SizeType;
  fontweight?: FontWeightType;
  fontstyle?: FontStyleType;
  as?: HeadingTag;
  class?: string;
}

const {
  variant = "default",
  size = "md",
  fontweight = "bold",
  fontstyle = "manrope",
  as: Tag = "h2",
  class: className,
  ...rest
} = Astro.props;

const variants: Record<VariantType, string> = {
  default: "text-primary-content",
  secondary: "text-secondary-content",
  underline: "text-primary-content underline",
  textWBg: "text-primary-content bg-primary/20 text-foreground shadow w-fit px-4 py-2 rounded-md",
};

const sizes: Record<SizeType, string> = {
  xxxxl: "text-7xl md:text-9xl",
  xxxl: "text-6xl md:text-8xl",
  xxl: "text-4xl md:text-6xl",
  xl: "text-2xl md:text-4xl",
  lg: "text-xl md:text-2xl",
  md: "text-lg md:text-xl",
  sm: "text-base md:text-lg",
  xs: "text-sm md:text-base",
  xxs: "text-xs md:text-sm", 
};

const fontweights: Record<FontWeightType, string> = {
  black: "font-black",
  bold: "font-bold",
  semibold: "font-semibold",
  normal: "font-normal",
  medium: "font-medium",
  light: "font-light",
  extralight: "font-extralight",
  thin: "font-thin",
};

const fontstyles: Record<FontStyleType, string> = {
  manrope: "font-manrope",
  workSans: "font-workSans",
};

const classes = cn(
  " ",
  variants[variant],
  sizes[size],
  fontweights[fontweight],
  fontstyles[fontstyle],
  className
);
---

<Tag class={classes} {...rest}>
  <slot />
</Tag>
