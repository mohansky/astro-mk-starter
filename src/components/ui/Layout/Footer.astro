---
export interface Props {
  variant?: 'default' | 'center' | 'compact';
  class?: string;
}

const { variant = 'default', class: className, ...rest } = Astro.props;

const variants = {
  default: 'footer p-10 bg-neutral text-neutral-content',
  center: 'footer footer-center p-10 bg-base-200 text-base-content rounded',
  compact: 'footer items-center p-4 bg-neutral text-neutral-content'
};

const footerClass = `${variants[variant]} ${className || ''}`.trim();
---

<footer class={footerClass} {...rest}>
  <slot />
</footer>