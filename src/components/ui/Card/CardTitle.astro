---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"h2"> {
  as?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
  class?: string;
}

const {
  as: Element = "h2",
  class: className,
  ...rest
} = Astro.props;

const classes = cn(
  "card-title",
  className
);
---

<Element class={classes} {...rest}>
  <slot />
</Element>