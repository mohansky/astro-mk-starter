---
// src/components/ui/Accordion/Accordion.astro
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"div"> {
  variant?: "default" | "bordered" | "compact";
  autoClose?: boolean;
  class?: string;
}

const {
  variant = "default",
  autoClose = false,
  class: className,
  ...rest
} = Astro.props;

const classes = cn(
  "collapse",
  variant === "bordered" && "collapse-arrow",
  variant === "compact" && "collapse-plus",
  className
);
---

<div class={classes} data-accordion={autoClose ? "auto-close" : ""} {...rest}>
  <slot />
</div>

