---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

interface Props extends HTMLAttributes<"button"> {
  active?: boolean;
  disabled?: boolean;
  href?: string;
  class?: string;
}

const {
  active = false,
  disabled = false,
  href,
  class: className,
  ...rest
} = Astro.props;

const classes = cn(
  "join-item",
  "btn",
  // Active state
  active && "btn-active",
  // Additional custom classes
  className
);

const Element = href ? "a" : "button";
---

<Element
  class={classes}
  href={href}
  disabled={Element === "button" ? disabled : undefined}
  {...rest}
>
  <slot />
</Element>